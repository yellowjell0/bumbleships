<h1>Deploy your fleet!</h1>
<div id="status"></div>
<div id="subscribed" data-players="<%=Seek.number_of_subcribers%>" > </div>
<% if @error %>
  <%= @error %>
<% end %>
<% @player.ships.each do |ship| %>
 <% if ship.start_coordinate == nil %>
    <%= form_for :ship, url: "/players/#{@player.id}/add_ship", method: :patch do |f| %>
    <%= f.hidden_field :ship_id, :value => ship.id %>
    Start coordinate for Ship of size <%= ship.length %>
    <%= f.text_field :start_coordinate %>
    Direction [up, down, left, right]
    <%= f.text_field :direction %>
    <%= f.submit %>
    <% end %>
  <% end %>
<% end %>

<h2>something else</h2>
<% @player.ships.each do |ship| %>
  <%= ship.start_coordinate %>
  <%= ship.direction %>
<% end %>

<%= render template: '/games/_board_2_top', locals: {spaces: @player.board.spaces.order(:coordinate)} %>

<form id="game">
  <label>Enter Info</label>
  <input type="text" name="text">
</form>


